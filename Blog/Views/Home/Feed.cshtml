@{
}

@{ ViewData["Title"] = "Feed"; }

<h2>Feed</h2>
<div>
    @foreach (Post post in @Model)
    {
        <div class="card mb-4">
            <div class="card-body">
                @Html.Raw(@post.Content)
            </div>

            <div class="card-footer">
                @Html.ActionLink("Edit", "CreatorPage", new { Id = @post.PostId }, new { @class = "btn btn-sm btn-secondary" })
            </div>
        </div>}
</div>